// path: tsconfig.json
// --- MODIFIED FILE ---

{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // As noted in your Vercel log
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // As noted in your Vercel log
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    
    // --- FIX: ADD THESE LINES ---
    // This tells TypeScript that "@/*" imports are relative to the project root.
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
    // --- END OF FIX ---
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}